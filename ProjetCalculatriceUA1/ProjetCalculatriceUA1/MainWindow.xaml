<Window x:Class="ProjetCalculatriceUA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetCalculatriceUA1"
        mc:Ignorable="d"
        Title="Math-jean-josia-danie_UA1" 
        Height="500" 
        Width="300" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="#000">

    <Border Padding="5">
        <Grid>
         

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
              
                <RowDefinition Height="100"/>

                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
             
                <RowDefinition Height="*"/>
              
                <RowDefinition Height="*"/>
               
                <RowDefinition Height="*"/>
              
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ZONE D'AFFICHAGE -->
           

            <!-- Ligne du haut -->
            <TextBlock 
                Text="" 
                Grid.ColumnSpan="5" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Name="Calcul" 
                Foreground="White"
                FontSize="16"
                Margin="10,0"/>

            <!-- Ligne du bas  -->
            <TextBlock 
                Text="0" 
                Grid.ColumnSpan="5" 
                Grid.Row="1" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Name="Resultat" 
                Foreground="White"
                FontSize="16"
                FontWeight="Bold"
                Margin="10"/>

        
            <!-- LIGNE 2 -->
          

            <Button Content="Sin" 
                    Grid.Row="2" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="sin" 
                    Click="Trigonometrie_Click"
                    ToolTip="Sinus (en degrés)"/>

            <Button Content="Cos" 
                    Grid.Row="2" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="cos" 
                    Click="Trigonometrie_Click"
                    ToolTip="Cosinus (en degrés)"/>

            <Button Content="Tan" 
                    Grid.Row="2" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="tan" 
                    Click="Trigonometrie_Click"
                    ToolTip="Tangente (en degrés)"/>

            <Button Content="CE" 
                    Grid.Row="2" 
                    Grid.Column="3" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="effacerResultat" 
                    Click="ClearE_Click"
                    ToolTip="Efface la valeur actuelle"/>

            <Button Content="C" 
                    Grid.Row="2" 
                    Grid.Column="4" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="effacerTout" 
                    Click="Clear_Click"
                    ToolTip="Efface tout"/>

            <!-- LIGNE 3  -->
          

            <Button Content="Arcsin" 
                    Grid.Row="3" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="arcsin" 
                    Click="Trigonometrie_Click"
                    ToolTip="Arc sinus (résultat en degrés)"/>

            <Button Content="Arccos" 
                    Grid.Row="3" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="arccos" 
                    Click="Trigonometrie_Click"
                    ToolTip="Arc cosinus (résultat en degrés)"/>

            <Button Content="Arctan" 
                    Grid.Row="3" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="arctan" 
                    Click="Trigonometrie_Click"
                    ToolTip="Arc tangente (résultat en degrés)"/>

            <Button Content="Back" 
                    Grid.Row="3" 
                    Grid.Column="3" 
                    Style="{StaticResource StyleGroupe3}" 
                    Name="back" 
                    Click="Back_Click"
                    ToolTip="Efface le dernier caractère"/>

            <Button Content="÷" 
                    Grid.Row="3" 
                    Grid.Column="4" 
                    Style="{StaticResource StyleGroupe2}" 
                    Name="division" 
                    Click="Operation_Click"
                    ToolTip="Division"/>

           
            <!-- LIGNE -->
           

            <Button Content="π" 
                    Grid.Row="4" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="pi" 
                    Click="Constante_Click"
                    ToolTip="Pi (≈ 3.14159)"/>

            <Button Content="7" 
                    Grid.Row="4" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="sept" 
                    Click="Nombre_Click"/>

            <Button Content="8" 
                    Grid.Row="4" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="huit" 
                    Click="Nombre_Click"/>

            <Button Content="9" 
                    Grid.Row="4" 
                    Grid.Column="3" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="neuf" 
                    Click="Nombre_Click"/>

            <Button Content="×" 
                    Grid.Row="4" 
                    Grid.Column="4" 
                    Style="{StaticResource StyleGroupe2}" 
                    Name="multiplication" 
                    Click="Operation_Click"
                    ToolTip="Multiplication"/>

           
            <!-- LIGNE 5  -->
          

            <Button Content="e" 
                    Grid.Row="5" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="exponentielle" 
                    Click="Constante_Click"
                    ToolTip="Nombre d'Euler (≈ 2.71828)"/>

            <Button Content="4" 
                    Grid.Row="5" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="quatre" 
                    Click="Nombre_Click"/>

            <Button Content="5" 
                    Grid.Row="5" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="cinq" 
                    Click="Nombre_Click"/>

            <Button Content="6" 
                    Grid.Row="5" 
                    Grid.Column="3" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="six" 
                    Click="Nombre_Click"/>

            <Button Content="-" 
                    Grid.Row="5" 
                    Grid.Column="4" 
                    Style="{StaticResource StyleGroupe2}" 
                    Name="soustraction" 
                    Click="Operation_Click"
                    ToolTip="Soustraction"/>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- LIGNE 6 : +/- + CHIFFRES 1-2-3 + ADDITION -->
            <!-- ═══════════════════════════════════════════════════════════ -->

            <Button Content="+/-" 
                    Grid.Row="6" 
                    Grid.RowSpan="2" 
                    Style="{StaticResource Styleplusoumoins}" 
                    Name="plusOuMoins" 
                    Click="PlusOuMoins_Click"
                    ToolTip="Change le signe"/>

            <Button Content="1" 
                    Grid.Row="6" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="un" 
                    Click="Nombre_Click"/>

            <Button Content="2" 
                    Grid.Row="6" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="deux" 
                    Click="Nombre_Click"/>

            <Button Content="3" 
                    Grid.Row="6" 
                    Grid.Column="3" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="trois" 
                    Click="Nombre_Click"/>

            <Button Content="+" 
                    Grid.Row="6" 
                    Grid.Column="4" 
                    Style="{StaticResource StyleGroupe2}" 
                    Name="addition" 
                    Click="Operation_Click"
                    ToolTip="Addition"/>

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!-- LIGNE 7 : CHIFFRE 0 + VIRGULE + ÉGAL -->
            <!-- ═══════════════════════════════════════════════════════════ -->

            <Button Content="0" 
                    Grid.Row="7" 
                    Grid.Column="1" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="zero" 
                    Click="Nombre_Click"/>

            <Button Content="." 
                    Grid.Row="7" 
                    Grid.Column="2" 
                    Style="{StaticResource StyleGroupe1}" 
                    Name="virgule" 
                    Click="Virgule_Click"
                    ToolTip="Virgule décimale"/>

            <Button Content="=" 
                    Grid.Row="7" 
                    Grid.Column="3" 
                    Grid.ColumnSpan="2" 
                    Style="{StaticResource StyleEgal}" 
                    Name="egal" 
                    Click="Egal_Click"
                    ToolTip="Calcule le résultat"/>

        </Grid>
    </Border>
</Window>